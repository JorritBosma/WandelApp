<%layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>Alle wandelingen</h1>
<div>
    <a href="/wandelingen/new">Voeg nieuwe wandeling toe</a>
</div>

<% for(let wandeling of wandelingen) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(wandeling.plaatjes.length> 0) {%>
            <img class="img-fluid" src="<%=wandeling.plaatjes[0].url%>" alt="">
        <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= wandeling.naam %></h5>
                <p class="card-text"><%= wandeling.beschrijving %> </p>
                <p class="card-text">
                    <small class="text-muted"><%= wandeling.gebied %>, <%= wandeling.provincie %></small>
                </p>
                <a href="/wandelingen/<%=wandeling._id%>" class="btn btn-primary">Bekijk wandeling</a>

            </div>
        </div>
    </div>
</div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const wandelingen = { features: <%-JSON.stringify(wandelingen) %>}
</script>

<script src="/js/clusterMap.js"></script>
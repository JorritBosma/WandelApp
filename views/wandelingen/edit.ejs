<%layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Wijzig wandeling</h1>
    <div class="col-6 offset-3">
        <form action="/wandelingen/<%= wandeling._id %>?_method=PUT " method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="naam">Naam</label>
                <input class="form-control" type="text" id="naam" name="wandeling[naam]" value="<%=wandeling.naam%>"
                    required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="plaats">Plaats</label>
                <input class="form-control" type="text" id="plaats" name="wandeling[plaats]"
                    value="<%=wandeling.plaats%>" required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="gebied">Gebied</label>
                <input class="form-control" type="text" id="gebied" name="wandeling[gebied]"
                    value="<%=wandeling.gebied%>" required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="provincie">Provincie</label>
                <input class="form-control" type="text" id="provincie" name="wandeling[provincie]"
                    value="<%=wandeling.provincie%>" required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="afstand">Afstand</label>
                <div class="input-group">
                    <input id="afstand" type="text" class="form-control" name="wandeling[afstand]"
                        value="<%=wandeling.afstand%>" placeholder="0,0" aria-label="afstand"
                        aria-describedby="afstand-label" required>
                    <span class="input-group-text" id="afstand-label">km</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="bewegwijzering">Kleur bewegwijzering</label>
                <input class="form-control" type="text" id="bewegwijzering" name="wandeling[bewegwijzering]"
                    value="<%=wandeling.bewegwijzering%>" required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="organisatie">Terreinbeheerder</label>
                <input class="form-control" type="text" id="organisatie" name="wandeling[organisatie]"
                    value="<%=wandeling.organisatie%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="website">Link</label>
                <input class="form-control" type="text" id="website" name="wandeling[website]"
                    value="<%=wandeling.website%>" required>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="beschrijving">Beschrijving</label>
                <textarea class="form-control" type="text" id="beschrijving" name="wandeling[beschrijving]"
                    required><%= wandeling.beschrijving %></textarea>
                <div class="valid-feedback">
                    Ziet er goed uit!
                </div>
            </div>
            <div class="mb-3">
                <label for="plaatje" class="form-label">Extra foto's toevoegen</label>
                <input class="form-control" type="file" id="plaatje" name="plaatje" multiple>
            </div>
            <div class="mb-3">
                <% wandeling.plaatjes.forEach(function(img, i) {%>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="wisPlaatjes[]" value="<%=img.filename%>">
                        <label for="image-<%=i%>">Wis foto</label>
                    </div>
                    <% }) %>
                        </div>
                        <div class=" mb-3">
                <button class="btn btn-info">Opslaan</button>
            </div>
        </form>
        <a href="/wandelingen/<%= wandeling._id  %> ">Terug naar de wandeling</a>
    </div>
</div>